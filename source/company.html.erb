<div class="bg-gray-100 py-6">
    <div class="w-10/12 mx-auto">
        <h2 class="text-gray-800 font-bold text-xl md:text-4xl md:mr-4 leading-none text-center">Vacantes de <%= company %></h2>
    </div>
</div>

<div class="mx-auto w-11/12  py-4">
    <% articles.each do |job| %>
        <li class="border-gray-200 border rounded md:border-t-0  md:border-r-0 md:border-l-0 md:border-b-2 px-2 py-4 flex justify-between items-center w-full flex-col lg:flex-row my-2 md:my-0">
            <div class="flex items-center text-center flex-col md:text-left md:flex-row">
                <figure class="w-8 h-8 mb-2 md:mb-0 md:mr-2 bg-cover bg-no-repeat bg-center bg-contain" style="background-image: url(<%= job.data.company_logo %>);"></figure>
                <div>
                    <h3 class="font-bold text-gray-800 m-0 text-sm leading-none company"><%= job.data.company %></h3>
                    <h2 class="text-gray-800 font-bold md:text-3xl leading-none title"><%= job.title %></h2>
                </div>
            </div>
            <div class="py-2 flex justify-between items-center flex-col lg:flex-row">
                <div class="flex-column text-center flex-no-wrap md:text-left md:mr-4 md:flex-row">
                    <h4 class="rounded bg-teal-200 p-1 mr-1 text-xs font-bold text-teal-800 type inline-block"><%= job.data.job_type %></h4>
                    <div class="category  inline-block">
                        <% job.data.categories.each do |f| %>
                            <span class="rounded bg-gray-200 p-1 text-xs font-bold text-gray-600 inline-block"><%= f %></span>
                        <% end %>
                    </div>
                </div>
                <h4 class="text-xs text-gray-700 font-bold my-5 mr-0 md:my-0 md:mr-4"><span class="state">@<%= job.data.state %></span> , <span class="country"><%= job.data.country %></span></h4>
                <a class="bg-black text-white font-bold md:text-sm py-1 px-2 flex items-center " href="<%= job.url %>">Ver Detalles <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="butt" stroke-linejoin="arcs"><path d="M9 18l6-6-6-6"/></svg></a>
            </div>
        </li>
    <% end %>
</div>